{
	"compilerOptions": {
		"experimentalDecorators": true,
		"target": "es2020",
		"module": "commonjs",
		"lib": ["ES2020"],
		"outDir": "./dist",
		"strict": true,
		"noImplicitAny": true,
		"declaration": true,
		"noUnusedLocals": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"removeComments": false
	},
	"include": [
		"src"
	]
}